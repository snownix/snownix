<section class="auth__form">
    <div class="auth__content">
        <h4 class="w-full text-3xl font-bold"><%= gettext "Sign in" %></h4>
        <p class="text-lg text-low mb-2">
            <%= gettext "Donâ€™t have an account?" %>
            <%= live_patch gettext("Sign up") , to: Routes.auth_register_path(@socket, :register) %>
        </p>
        <.live_component module={SnownixWeb.SharedLive.AlertsComponent} flash={@flash} id="login-alerts" />

        <%= form_for :user, Routes.user_session_path(@socket, :create), [as: :user, class: "relative w-full space-y-6"
            ], fn f -> %>
            <div class="relative">
                <%= label f, :email, gettext("Email") ,class: "font-medium text-gray-900" %>
                <%= email_input f, :email, placeholder: gettext("Email Address") , required: true %>
            </div>
            <div class="relative">
                <%= label f, :password, gettext("Password") ,class: "font-medium text-gray-900" %>
                <%= password_input f, :password, placeholder: gettext("Password") , required: true %>
            </div>
            <div class="flex flex-col md:flex-row justify-between space-y-2 md:space-y-0">
                <div class="checkbox">
                    <%= checkbox f, :remember_me  %>
                    <label for="user_remember_me" >
                        <%= gettext "Remember me" %>
                    </label>
                </div>
            <%= live_patch gettext("Forgot password?") , to: Routes.auth_forgot_password_path(@socket, :forgot), class: "text-sm" %>
            </div>
            <div>
                <button type="submit" class="btn primary">Login</button>
            </div>
        <% end %>
    </div>
</section>